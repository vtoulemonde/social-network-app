    <!doctype html>
    <html lang="en">
    <head>
        <title>Social Network</title>
        <link rel="stylesheet" type="text/css" href="/public/style.css">
        <link rel="stylesheet" type="text/css" href="/public/css/semantic.css">
    </head>
    <body>
       <!-- TOP MENU -->
        <div class="ui red inverted menu">
            <a class="item" href="/index"><i class="home icon"></i> <%=user.name%>'s wall</a>
            <a class="item" href="/news"><i class="grid layout icon"></i> News</a>
            <a class="item" href="/friends"><i class="users icon"></i> My friends</a>
            <a class="item"><i class="setting icon"></i> Profil</a>
            <a class="active item" href="/external_news"><i class="grid layout icon"></i> Articles</a>
            <div class="right menu">
                <div class="item">
                    <div class="ui icon input">
                        <form action="user/search" method="GET">
                            <input type="text" name="user_search" placeholder="Search users...">
                        </form>
                        <i class="search icon"></i>
                    </div>
                </div>
                <a class="ui item" href="/user/logout"><i class="off icon"></i> Logout</a>
            </div>
        </div>
        <!-- END TOP MENU -->

        <div class="ui one column page grid">
            <div class="column">
                <!-- PROFIL HEADER -->
                <div class="ui segment">
                    <!-- <img class="circular ui image" src="/images/demo/photo2.jpg"> -->
                    <h1> <%=user.name%></h1>
                </div>
                <!-- PROFIL HEADER -->

                <div class="ui segment">

                <!-- LIST OF POSTS -->
                <h3 class="ui header">News from Feedzilla</h3>

                <div class="ui list">
                    <% articles.each do |article| %>
                    <a class="item">
                        <i class="right triangle icon"></i>
                        <%=article['title']%>
                    </a>
                    <% end %>
                </div>
                <!-- END LIST OF POSTS -->


            </div>
            </div>
        </div>

    </body>
    </html>