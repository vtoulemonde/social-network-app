    <!doctype html>
    <html lang="en">
    <head>
        <title>Social Network</title>
        <link rel="stylesheet" type="text/css" href="/public/style.css">
        <link rel="stylesheet" type="text/css" href="/public/css/semantic.css">
    </head>
    <body>
       <!-- TOP MENU -->
        <div class="ui red inverted menu">
            <a class="item" href="/index"><i class="home icon"></i> <%=user.name%>'s wall</a>
            <a class="item" href="/news"><i class="grid layout icon"></i> News</a>
            <a class="active item" href="/friends"><i class="users icon"></i> My friends</a>
            <a class="item" href="/user/show"><i class="setting icon"></i> Profil</a>
            <a class="item" href="/external_news"><i class="grid layout icon"></i> Articles</a>
            <div class="right menu">
                <div class="item">
                    <div class="ui icon input">
                        <form action="user/search" method="GET">
                            <input type="text" name="user_search" placeholder="Search users...">
                        </form>
                        <i class="search icon"></i>
                    </div>
                </div>
                <a class="ui item" href="/user/logout"><i class="off icon"></i> Logout</a>
            </div>
        </div>
        <!-- END TOP MENU -->

        <div class="ui one column page grid">
            <div class="column">
                <!-- PROFIL HEADER -->
                <div class="ui segment">
                    <img class="ui circular small floated image" src="/public/images/profil/<%=user.photo%>">
                    <h1> <%=user.name%></h1>
                </div>
                <!-- PROFIL HEADER -->

                <div class="ui segment">
                <!-- LIST OF USERS -->
                <h3 class="ui header">All friends</h3>

        		<div class="ui divided list">
        			<% user.friends.each do |friend| %>
        			<div class="item">
        				<!-- <img class="ui avatar image" src="/images/demo/avatar2.jpg"> -->
                        <img class="ui avatar image" src="/public/images/profil/<%=friend.photo%>">
        				<div class="content">
        					<div class="header"><a href="/user/wall?id=<%=friend.id%>"><%=friend.name%></a></div>
        				</div>
        			</div>
        			<% end %>
        		</div>
                <!-- END LIST OF USERS -->
            </div>
            </div>
        </div>

    </body>
    </html>